  <%- include("_head") %> 

  <body>
    
    <%- include("_navbar") %>

   


    <div class="container">
      <div class="row d-flex justify-content-center align-items-center mt-5">
        <div class="col-8 mt-5 ">

          <% if (basket.length === 0) { %>
            <div class="d-flex flex-column justify-content-center">
              <h1>Oops ! Nothing in your basket yet !</h1>
              <a class="btn btn-danger" href="homepage">Add a trip !</a>
            </div>
              

          <% } else { %>
              
              <h1>My Tickets :</h1>

              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                  </tr>
                  <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@fat</td>
                  </tr>
                  <tr>
                    <th scope="row">3</th>
                    <td colspan="2">Larry the Bird</td>
                    <td>@twitter</td>
                  </tr>
                </tbody>
              </table>



              <% for (let i=0; i<basket.length;i++) { %>
                <div class="row ticket-option pt-5 pb-5 px-4 d-flex align-items-center">
                    <h5><%= basket[i]._id %> </h5>
                  

                </div>
              <% } %>

          <% } %>
          
        </div>
      </div>



  


    </div>




    <%- include("_scripts") %>   
  </body>
</html>
