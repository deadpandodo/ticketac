<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img src="/images/train.png" alt="" width="30" height="24" class="d-inline-block align-text-top">Ticketac</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="nav justify-content-end">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Connection</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">My last trips</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

   


    <div class="container">
      <div class="row d-flex justify-content-center align-items-center mt-5">
        <div class="col-4 mt-5 ">
          <div class="d-flex flex-column align-items-center">
            <h1>Sign-in :</h1>
          </div>    
          <div>
            <form class="d-flex flex-column align-items-center" action="signin" method="POST">
              <input type="email" name = "email" class="form-control mt-2" id="email" placeholder="Email">
              <input type="password" name = "password" class="form-control mt-2" id="password" placeholder="Password">
              <button type="submit" class="btn btn-danger mt-2">Confirm</button>
            </form>
          </div>
        </div>

        <div class="col-4 mt-5 ">
          <div class="d-flex flex-column align-items-center">
            <h1>Sign-up :</h1>
          </div>    
          <div>
            <form class="d-flex flex-column align-items-center" action="signup" method="POST">
              <input type="email" name = "email" class="form-control mt-2" id="email" placeholder="Email">
              <input type="text" name = "firstname" class="form-control mt-2" id="firstname" placeholder="Firstname">
              <input type="text" name = "lastname" class="form-control mt-2" id="lastname" placeholder="Lastname">
              <input type="password" name = "password" class="form-control mt-2" id="password" placeholder="Password">
              <button type="submit" class="btn btn-danger mt-2">Confirm</button>
            </form>
          </div>
        </div>


      </div>


    </div>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
