  <%- include("_head") %> 

  <body>
    
    <%- include("_navbar") %>

   


    <div class="container">
      <div class="row d-flex justify-content-center align-items-center mt-5">
        <div class="col-8 mt-5 ">
          
          <% if (journeys.length === 0) { %>

              <h1>Oops ! No trains available...</h1>
              <div class="d-flex flex-column justify-content-center">
                <a class="btn btn-danger" href="homepage" value="Home">Find another one !</a>
              </div>
              

          <% } else { %>
              
              <h1>Tickets available on the <%= date %></h1>
              <% for (let i=0; i<journeys.length;i++) { %>
                <div class="row bg-white mt-1 pt-5 pb-5 px-4 d-flex align-items-center">
                  <div class="col-3 d-flex justify-content-left">
                    <h5><%= journeys[i].departure %> / <%= journeys[i].arrival %></h5>
                  </div>
                  <div class="col-6 d-flex justify-content-center">
                    <h6>Train departure at : <%= journeys[i].departureTime %></h6>
                  </div>
                  <div class="col-1 d-flex justify-content-center">
                    <h3><%= journeys[i].price %>â‚¬</h3>
                  </div>
                  <div class="col-2 d-flex justify-content-center">
                    <a class="btn btn-danger" href="add-trip-to-basket?id=<%= journeys[i].id %>" >OK</a>
                  </div>

                </div>
              <% } %>

          <% } %>
          
        </div>
      </div>



  


    </div>




    <%- include("_scripts") %>   
  </body>
</html>
