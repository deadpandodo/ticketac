  <%- include("_head") %> 

  <body>
    
    <%- include("_navbar") %>

   


    <div class="container">
      <div class="row d-flex justify-content-center align-items-center mt-5">
        <div class="col-8 mt-5 ">
          <div class="d-flex flex-column align-items-center">
            <h1>One way ticket :</h1>
          </div>    
          <div>
            <form class="d-flex flex-row" action="search-trip" method="POST">
              
              <select class="form-select mx-2" name = "from">
                <option selected>From: Paris, Marseille...</option>
                <% for (let i=0;i<city.length;i++) { %>
                  <option value="<%= city[i] %>"><%= city[i] %></option>
                <% } %>
              </select>

              <select class="form-select mx-2" name = "to">
                <option selected>To: Lille, Nantes...</option>
                <% for (let i=0;i<city.length;i++) { %>
                  <option value="<%= city[i] %>"><%= city[i] %></option>
                <% } %>
              </select>

              <select class="form-select mx-2" name = "date">
                <option selected>On the : </option>
                <% for (let i=0;i<date.length;i++) { %>
                  <option value="<%= date[i] %>"><%= date[i] %></option>
                <% } %>
              </select>

<!-- 
              <input type="text" name = "from" class="form-control  mx-2 " id="from" placeholder="From: Paris, Marseille...">
              <input type="text" name = "to" class="form-control  mx-2" id="to" placeholder="To: Lille, Nantes...">
              <input type="date" name = "date" class="form-control mx-2" id="startDate" >
 -->

              <button type="submit" class="btn btn-danger  mx-2">GO</button>
            </form>
          </div>
        </div>
      </div>



      <div class="row ">
        <div class="col-12 d-flex justify-content-center align-items-center mt-5">
          <img src="images/landmark.png" height=300 >
        </div>
      </div>


    </div>







    <%- include("_scripts") %>   
  </body>
